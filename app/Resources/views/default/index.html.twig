{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container">
    <h1>Cube Summation</h1>

    <div class="alert alert-danger hidden">
          <strong>Danger!</strong>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Input example:</div>
        <div class="panel-body">
            <code>
                1<br>
                4 5<br>
                UPDATE 2 2 2 4<br>
                QUERY 1 1 1 3 3 3<br>
                UPDATE 1 1 1 23<br>
                QUERY 2 2 2 4 4 4<br>
                QUERY 1 1 1 3 3 3
            </code>
        </div>
    </div>

    <div class="form-group">
        <label>Input</label>
        <textarea id="input" cols="50" rows="10" class="form-control" placeholder="Add here your input (iterations, dimentions and operations)"></textarea>
    </div>

    <button id="submit" type="button" class="btn btn-primary">Calculate</button>
    <hr>

    <div class="form-group">
        <label>Output</label>
        <textarea id="output" cols="50" rows="10" class="form-control" readonly></textarea>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
